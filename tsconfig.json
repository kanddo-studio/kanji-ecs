{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "kanji-ecs/components": ["./components"],
      "kanji-ecs/entities": ["./entities"],
      "kanji-ecs/systems": ["./systems"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
